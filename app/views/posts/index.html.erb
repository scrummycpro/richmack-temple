<!-- app/views/posts/index.html.erb -->
<% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
    <%= image_tag post.picture, class: "card-img-top" if post.picture.attached? %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= truncate(strip_tags(post.body), length: 100) %></p>
      <%= link_to 'Read more', post, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_post_path(post), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
